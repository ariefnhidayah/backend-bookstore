<h1 class="h3 mb-4 text-gray-800">Buku</h1>

<%- include('../messages.ejs') %>

<div class="card shadow mb-4">
    <div class="cart-header p-3">
        <a href="/admin/book/add" class="btn btn-primary">Tambah Buku</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Gambar</th>
                        <th width="200px">Judul</th>
                        <th>Penulis</th>
                        <th>Harga</th>
                        <th>Stok</th>
                        <th width="50px">Kategori</th>
                        <th>Opsi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < book.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td class="text-center">
                                <img src="<%= site_url + book[i].image %>" alt="<%= book[i].name %>" style="width: 100px;">
                            </td>
                            <td><%= book[i].name %></td>
                            <td><%= book[i].author %></td>
                            <td>Rp. <%= rupiah(book[i].price) %></td>
                            <td><%= book[i].stock %></td>
                            <td><%= book[i].category.name %></td>
                            <td>
                                <a href="/admin/book/<%= book[i].id %>" class="btn btn-warning">Ubah</a>
                                <form action="/admin/book/<%= book[i].id %>?_method=DELETE" class="d-inline" method="POST">
                                    <button type="button" class="btn btn-danger" onclick="deleteItem(this)">Hapus</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>