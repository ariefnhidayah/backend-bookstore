<h1 class="h3 mb-4 text-gray-800">Tambah Kategori</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form action="/admin/category" method="POST">
            <div class="form-group row">
                <label class="col-md-2">Nama Kategori</label>
                <input type="text" name="name" class="form-control col-md-7" placeholder="Masukkan nama kategori" required>
            </div>
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Tambah</button>
                    <a href="/admin/category" class="btn btn-secondary">Kembali</a>
                </div>
            </div>
        </form>
    </div>
</div>